<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/coordinatorLayout" >

    <TextView
        android:id="@+id/resultText"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="148dp"
        android:text="Result"
        android:textAlignment="center"
        android:textSize="30sp"
        android:translationX="140dp"
        android:translationY="340dp"
        app:layout_constraintTop_toBottomOf="@+id/buttonSubstract"
        tools:layout_editor_absoluteX="-26dp" />

    <Button
        android:id="@+id/button6"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:layout_marginStart="8dp"
        android:text="RESET"
        android:translationX="140dp"
        android:translationY="250dp"
        app:layout_anchorGravity="center"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/buttonSubstract" />

    <Button
        android:id="@+id/buttinDivide"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:onClick="Divide"
        android:text="Divide"
        android:translationX="280dp"
        android:translationY="150dp" />

    <Button
        android:id="@+id/buttonSubstract"
        android:layout_width="130dp"
        android:layout_height="75dp"
        android:background="#FFFFFF"
        android:onClick="Substract"
        android:text="SUBSTRACT"
        android:translationX="140dp"
        android:translationY="150dp" />

    <Button
        android:id="@+id/buttonAdd"
        android:layout_width="110dp"
        android:layout_height="75dp"
        android:background="#f00000"
        android:onClick="Add"
        android:text="ADD"
        android:translationX="20dp"
        android:translationY="150dp" />

    <EditText
        android:id="@+id/Number2Field"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="112dp"
        android:autofillHints="false"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Number 2"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:translationY="90dp"
        app:layout_constraintTop_toBottomOf="@+id/number1Field"
        tools:ignore="DuplicateClickableBoundsCheck"
        tools:layout_editor_absoluteX="16dp" />

    <EditText
        android:id="@+id/number1Field"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:autofillHints="false"
        android:cursorVisible="true"
        android:ems="10"
        android:hint="Number 1"
        android:inputType="numberDecimal"
        android:selectAllOnFocus="true"
        android:singleLine="true"
        android:textAlignment="center"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        app:layout_anchor="@+id/number1Field"
        app:layout_anchorGravity="center" />
</androidx.constraintlayout.widget.ConstraintLayout>